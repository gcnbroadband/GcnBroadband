<%= form_for(:user, url: session_path(:user), html:{id: "mysignin"}) do |f| %>
  <div class="form-group sign-in-div">
    <i class="material-icons">account_circle</i>
    <%= f.email_field :email, class: "form-control", id: "empty_val-email", placeholder: "Enter your email" %>
  </div>

  <div class="form-group sign-in-div">
    <i class="material-icons">vpn_key</i>
    <%= f.password_field :password, class: "form-control empty_val", placeholder: "Enter password" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="checkbox">
      <label>
        <input id="user_remember_me" name="user[remember_me]" type="checkbox" value="1">  Remember me
      </label> 
    </div>
  <% end -%>
    <%= f.submit "Log in",class: "btn btn-success btn-lg btn-block btn-raised sign_btn" %>
<% end %>

